#ifndef DISK_H 
#define DISK_H

#include <stdint.h>


typedef uint32_t DISK_TYPE;

#define DISK_TYPE_REAL 0
struct disk
{
	DISK_TYPE type;
	uint32_t size;
};
void disk_search_and_init();
struct disk* disk_get(uint32_t index);
int read_disk_block(struct disk* disk_p,uint32_t lba, uint32_t total, void* buf);
#endif
